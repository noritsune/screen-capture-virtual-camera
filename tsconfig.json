{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
